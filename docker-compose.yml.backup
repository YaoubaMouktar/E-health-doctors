version: '3.8'

services:
  # Service PHP-FPM
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: ehealth-app
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html
      - ./docker/php/php.ini:/usr/local/etc/php/conf.d/custom.ini
    depends_on:
      - db
    networks:
      - ehealth-network

  # Service Nginx
  webserver:
    image: nginx:alpine
    container_name: ehealth-nginx
    restart: unless-stopped
    ports:
      - "8000:80"
    volumes:
      - ./:/var/www/html
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - app
    networks:
      - ehealth-network

  # Service MySQL
  db:
    image: mysql:8.0
    container_name: ehealth-mysql
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: ${DB_DATABASE}
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_USER: ${DB_USERNAME}
    volumes:
      - dbdata:/var/lib/mysql
    ports:
      - "3306:3306"
    networks:
      - ehealth-network

  # Service PHPMyAdmin (optionnel)
  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: ehealth-pma
    restart: unless-stopped
    ports:
      - "8080:80"
    environment:
      PMA_HOST: db
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}
    depends_on:
      - db
    networks:
      - ehealth-network

# Ajoutez ce service
redis:
  image: redis:alpine
  container_name: ehealth-redis
  restart: unless-stopped
  ports:
    - "6379:6379"
  networks:
    - ehealth-network

# Volumes et r√©seaux
volumes:
  dbdata:

networks:
  ehealth-network:
    driver: bridge